{
   "swagger":"2.0",
   "info":{
      "description":"This API allows clients to create new customers and retrieve details about existing customers.",
      "version":"v1.0.0",
      "title":"Customer Core API",
      "contact":{
         
      }
   },
   "host":"localhost:8110",
   "basePath":"/",
   "tags":[
      {
         "name":"city-reference-data-holder",
         "description":"City Reference Data Holder"
      },
      {
         "name":"customer-core-frontend-controller",
         "description":"Customer Core Frontend Controller"
      },
      {
         "name":"customer-information-holder",
         "description":"Customer Information Holder"
      }
   ],
   "paths":{
      "/cities/{postalCode}":{
         "get":{
            "tags":[
               "city-reference-data-holder"
            ],
            "summary":"Get the cities for a particular postal code.",
            "operationId":"getCitiesForPostalCodeUsingGET",
            "produces":[
               "*/*"
            ],
            "parameters":[
               {
                  "name":"postalCode",
                  "in":"path",
                  "description":"the postal code",
                  "required":true,
                  "type":"string"
               }
            ],
            "responses":{
               "200":{
                  "description":"OK",
                  "schema":{
                     "$ref":"#/definitions/CitiesResponseDto"
                  }
               },
               "401":{
                  "description":"Unauthorized"
               },
               "403":{
                  "description":"Forbidden"
               },
               "404":{
                  "description":"Not Found"
               }
            }
         }
      },
      "/customercorefe":{
         "get":{
            "tags":[
               "customer-core-frontend-controller"
            ],
            "summary":"getCustomerById",
            "operationId":"getCustomerByIdUsingGET",
            "produces":[
               "*/*"
            ],
            "parameters":[
               {
                  "name":"id",
                  "in":"query",
                  "description":"id",
                  "required":true,
                  "type":"string"
               }
            ],
            "responses":{
               "200":{
                  "description":"OK",
                  "schema":{
                     "type":"string"
                  }
               },
               "401":{
                  "description":"Unauthorized"
               },
               "403":{
                  "description":"Forbidden"
               },
               "404":{
                  "description":"Not Found"
               }
            }
         }
      },
      "/customers":{
         "get":{
            "tags":[
               "customer-information-holder"
            ],
            "summary":"Get all customers in pages of 10 entries per page.",
            "operationId":"getCustomersUsingGET",
            "produces":[
               "*/*"
            ],
            "parameters":[
               {
                  "name":"fields",
                  "in":"query",
                  "description":"a comma-separated list of the fields that should be included in the response",
                  "required":false,
                  "type":"string"
               },
               {
                  "name":"filter",
                  "in":"query",
                  "description":"search terms to filter the customers by name",
                  "required":false,
                  "type":"string"
               },
               {
                  "name":"limit",
                  "in":"query",
                  "description":"the maximum number of customers per page",
                  "required":false,
                  "type":"integer",
                  "default":10,
                  "format":"int32"
               },
               {
                  "name":"offset",
                  "in":"query",
                  "description":"the offset of the page's first customer",
                  "required":false,
                  "type":"integer",
                  "default":0,
                  "format":"int32"
               }
            ],
            "responses":{
               "200":{
                  "description":"OK",
                  "schema":{
                     "$ref":"#/definitions/PaginatedCustomerResponseDto"
                  }
               },
               "401":{
                  "description":"Unauthorized"
               },
               "403":{
                  "description":"Forbidden"
               },
               "404":{
                  "description":"Not Found"
               }
            }
         },
         "post":{
            "tags":[
               "customer-information-holder"
            ],
            "summary":"Create a new customer.",
            "operationId":"createCustomerUsingPOST",
            "consumes":[
               "application/json"
            ],
            "produces":[
               "*/*"
            ],
            "parameters":[
               {
                  "in":"body",
                  "name":"requestDto",
                  "description":"the customer's profile information",
                  "required":true,
                  "schema":{
                     "$ref":"#/definitions/CustomerProfileUpdateRequestDto"
                  }
               }
            ],
            "responses":{
               "200":{
                  "description":"OK",
                  "schema":{
                     "$ref":"#/definitions/CustomerResponseDto"
                  }
               },
               "201":{
                  "description":"Created"
               },
               "401":{
                  "description":"Unauthorized"
               },
               "403":{
                  "description":"Forbidden"
               },
               "404":{
                  "description":"Not Found"
               }
            }
         }
      },
      "/customers/{customerId}":{
         "put":{
            "tags":[
               "customer-information-holder"
            ],
            "summary":"Update the profile of the customer with the given customer id",
            "operationId":"updateCustomerUsingPUT",
            "consumes":[
               "application/json"
            ],
            "produces":[
               "*/*"
            ],
            "parameters":[
               {
                  "name":"customerId",
                  "in":"path",
                  "description":"the customer's unique id",
                  "required":true,
                  "type":"string"
               },
               {
                  "in":"body",
                  "name":"requestDto",
                  "description":"the customer's updated profile",
                  "required":true,
                  "schema":{
                     "$ref":"#/definitions/CustomerProfileUpdateRequestDto"
                  }
               }
            ],
            "responses":{
               "200":{
                  "description":"OK",
                  "schema":{
                     "$ref":"#/definitions/CustomerResponseDto"
                  }
               },
               "201":{
                  "description":"Created"
               },
               "401":{
                  "description":"Unauthorized"
               },
               "403":{
                  "description":"Forbidden"
               },
               "404":{
                  "description":"Not Found"
               }
            }
         }
      },
      "/customers/{customerId}/address":{
         "put":{
            "tags":[
               "customer-information-holder"
            ],
            "summary":"Change a customer's address.",
            "operationId":"changeAddressUsingPUT",
            "consumes":[
               "application/json"
            ],
            "produces":[
               "*/*"
            ],
            "parameters":[
               {
                  "name":"customerId",
                  "in":"path",
                  "description":"the customer's unique id",
                  "required":true,
                  "type":"string"
               },
               {
                  "in":"body",
                  "name":"requestDto",
                  "description":"the customer's new address",
                  "required":true,
                  "schema":{
                     "$ref":"#/definitions/AddressDto"
                  }
               }
            ],
            "responses":{
               "200":{
                  "description":"OK",
                  "schema":{
                     "$ref":"#/definitions/AddressDto"
                  }
               },
               "201":{
                  "description":"Created"
               },
               "401":{
                  "description":"Unauthorized"
               },
               "403":{
                  "description":"Forbidden"
               },
               "404":{
                  "description":"Not Found"
               }
            }
         }
      },
      "/customers/{ids}":{
         "get":{
            "tags":[
               "customer-information-holder"
            ],
            "summary":"Get a specific set of customers.",
            "operationId":"getCustomerUsingGET",
            "produces":[
               "*/*"
            ],
            "parameters":[
               {
                  "name":"fields",
                  "in":"query",
                  "description":"a comma-separated list of the fields that should be included in the response",
                  "required":false,
                  "type":"string"
               },
               {
                  "name":"ids",
                  "in":"path",
                  "description":"a comma-separated list of customer ids",
                  "required":true,
                  "type":"string"
               }
            ],
            "responses":{
               "200":{
                  "description":"OK",
                  "schema":{
                     "$ref":"#/definitions/CustomersResponseDto"
                  }
               },
               "401":{
                  "description":"Unauthorized"
               },
               "403":{
                  "description":"Forbidden"
               },
               "404":{
                  "description":"Not Found"
               }
            }
         }
      }
   },
   "definitions":{
      "Address":{
         "type":"object",
         "properties":{
            "city":{
               "type":"string"
            },
            "postalCode":{
               "type":"string"
            },
            "streetAddress":{
               "type":"string"
            }
         },
         "title":"Address"
      },
      "AddressDto":{
         "type":"object",
         "properties":{
            "city":{
               "type":"string"
            },
            "postalCode":{
               "type":"string"
            },
            "streetAddress":{
               "type":"string"
            }
         },
         "title":"AddressDto"
      },
      "CitiesResponseDto":{
         "type":"object",
         "properties":{
            "cities":{
               "type":"array",
               "items":{
                  "type":"string"
               }
            }
         },
         "title":"CitiesResponseDto"
      },
      "CustomerProfileUpdateRequestDto":{
         "type":"object",
         "properties":{
            "birthday":{
               "type":"string",
               "format":"date-time"
            },
            "city":{
               "type":"string"
            },
            "email":{
               "type":"string"
            },
            "firstname":{
               "type":"string"
            },
            "lastname":{
               "type":"string"
            },
            "phoneNumber":{
               "type":"string"
            },
            "postalCode":{
               "type":"string"
            },
            "streetAddress":{
               "type":"string"
            }
         },
         "title":"CustomerProfileUpdateRequestDto"
      },
      "CustomerResponseDto":{
         "type":"object",
         "properties":{
            "_links":{
               "$ref":"#/definitions/Links"
            },
            "birthday":{
               "type":"string",
               "format":"date-time"
            },
            "city":{
               "type":"string"
            },
            "customerId":{
               "type":"string"
            },
            "email":{
               "type":"string"
            },
            "firstname":{
               "type":"string"
            },
            "lastname":{
               "type":"string"
            },
            "moveHistory":{
               "type":"array",
               "items":{
                  "$ref":"#/definitions/Address"
               }
            },
            "phoneNumber":{
               "type":"string"
            },
            "postalCode":{
               "type":"string"
            },
            "streetAddress":{
               "type":"string"
            }
         },
         "title":"CustomerResponseDto"
      },
      "CustomersResponseDto":{
         "type":"object",
         "properties":{
            "_links":{
               "$ref":"#/definitions/Links"
            },
            "customers":{
               "type":"array",
               "items":{
                  "$ref":"#/definitions/CustomerResponseDto"
               }
            }
         },
         "title":"CustomersResponseDto"
      },
      "Links":{
         "type":"object",
         "properties":{
            "empty":{
               "type":"boolean"
            }
         },
         "title":"Links"
      },
      "PaginatedCustomerResponseDto":{
         "type":"object",
         "properties":{
            "_links":{
               "$ref":"#/definitions/Links"
            },
            "customers":{
               "type":"array",
               "items":{
                  "$ref":"#/definitions/CustomerResponseDto"
               }
            },
            "filter":{
               "type":"string"
            },
            "limit":{
               "type":"integer",
               "format":"int32"
            },
            "offset":{
               "type":"integer",
               "format":"int32"
            },
            "size":{
               "type":"integer",
               "format":"int32"
            }
         },
         "title":"PaginatedCustomerResponseDto"
      }
   }
}